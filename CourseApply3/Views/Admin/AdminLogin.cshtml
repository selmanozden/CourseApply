@{
    ViewData["Title"] = "Admin Login";
    Layout = "_AdminLayout";


}
@* adminlogin *@
<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header text-center">
                    <h2>Admin Login</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="AdminLogin">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" name="adminEmail" placeholder="Email adresinizi girin" required />
                        </div>
                        <div class="form-group">
                            <label for="password">Password</label>
                            <input type="password" class="form-control" name="adminPassword" placeholder="Şifrenizi girin" required />
                        </div>
                        <button type="submit" class="btn btn-primary btn-block" >Giriş Yap</button>
                    </form>
                </div>
            </div>
            @if (ViewBag.Message != null)
            {
                <div class="alert alert-danger mt-3 text-center">@ViewBag.Message</div>
            }
        </div>
    </div>
</div>
