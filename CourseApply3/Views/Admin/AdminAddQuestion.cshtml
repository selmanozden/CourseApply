@{
    Layout = "_AdminLayout";
}
@model CourseProperty.QuestionProperty;
@* adminaddquestion *@
<div class="container mt-5">
    <h2>Yeni Soru Ekle</h2>
    <form asp-action="AdminAddQuestion" method="post" onsubmit="return validateForm()">
        <div class="form-group">
            <label for="Question">Soru</label>
            <input type="text" class="form-control" name="Question" required />
        </div>
        <div class="form-group">
            <label for="AnswerA">Cevap A</label>
            <div class="input-group">
                <input type="text" class="form-control" id="AnswerA" name="AnswerA" required />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <input type="radio" name="CorrectAnswer" value="" onclick="this.value = document.getElementById('AnswerA').value" />
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="AnswerB">Cevap B</label>
            <div class="input-group">
                <input type="text" class="form-control" id="AnswerB" name="AnswerB" required />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <input type="radio" name="CorrectAnswer" value="" onclick="this.value = document.getElementById('AnswerB').value" />
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="AnswerC">Cevap C</label>
            <div class="input-group">
                <input type="text" class="form-control" id="AnswerC" name="AnswerC" required />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <input type="radio" name="CorrectAnswer" value="" onclick="this.value = document.getElementById('AnswerC').value" />
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label for="AnswerD">Cevap D</label>
            <div class="input-group">
                <input type="text" class="form-control" id="AnswerD" name="AnswerD" required />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <input type="radio" name="CorrectAnswer" value="" onclick="this.value = document.getElementById('AnswerD').value" />
                    </div>
                </div>
            </div>
        </div>
        <input type="hidden" name="ExamId" value="@Model.ExamId" />
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </form>
</div>

<script>
    function validateForm() {
        var radios = document.getElementsByName('CorrectAnswer');
        var formValid = false;

        for (var i = 0; i < radios.length; i++) {
            if (radios[i].checked) {
                formValid = true;
                break;
            }
        }

        if (!formValid) {
            alert("Lütfen bir doğru cevap seçin.");
        }

        return formValid;
    }
</script>